@page
@model Models.Fournisseurs
@{
    ViewData["Title"] = "Contact";
}

<div class="text-center">
    <h2 class="display-4">Liste de contact des differents fournisseurs </h2>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ville)
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodePostal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pays)
        </dt>
    </dl>
</div>
<div>
    <a asp-page="/Index">Retour à l'accueil </a>
</div>